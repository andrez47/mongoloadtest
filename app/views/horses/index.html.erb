<h1>Listing horses</h1>

<%= page_entries_info @horses %>
<br /><br />

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Birthday</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @horses.each do |horse| %>
  <tr>
    <td><%= horse.name %></td>
    <td><%= horse.bio %></td>
	<td><%= horse.birthday %></td>
	<td><%= horse.age %></td>
    <td><%= link_to 'Show', horse %></td>
    <td><%= link_to 'Edit', edit_horse_path(horse) %></td>
    <td><%= link_to 'Destroy', horse, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= will_paginate @horses %>
<br />

<%= link_to 'New Horse', new_horse_path %>
