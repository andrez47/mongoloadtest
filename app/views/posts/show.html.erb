<p id="notice"><%= notice %></p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>
<p>
  <b>Member:</b>
  <%= @post.writer.first_name %>
</p>
<p>
  <b>Member:</b>
  <%= @post.member_recipient.first_name %>
</p>
<p>
  <b>Horse:</b>
  <%= @post.horse_partner.name %>
</p>
<p>
  <b>Horse:</b>
  <%= @post.horse_recipient.name %>
</p>

<% if @post.comments.size > 0 %>
  <h2>Comments</h2>
  <% for comment in @post.comments %>
    <p><%= comment.body %>
    <% if comment.writer != nil %>
    by member: <%= comment.writer.first_name %>
    <% end %>
    </p>
  <% end %>
<% end %>

<h2>New Comment</h2>
<%= form_for [@post, Comment.new] do |f| %>
  <p><%= f.text_area :body, :rows => 10 %></p>
  <div class="field">
    <%= f.label :writer_id %><br />
    <%= f.collection_select :writer_id, Member.all, :id, :first_name %>
  </div>
  <p><%= f.submit %></p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
